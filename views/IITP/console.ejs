<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <title>Console</title>
    <style>
        body {
            padding: 2rem;
        }

        .card {
            margin-bottom: 1.5rem;
            width: 100%;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .card-header {
            background-color: #007BFF;
            color: #fff;
        }

        .card-body {
            background-color: #f8f9fa;
        }

        .card-footer {
            background-color: #f8f9fa;
            border-top: 1px solid #dee2e6;
        }

        .card-title {
            font-size: 1.25rem;
            margin-bottom: 0.5rem;
        }

        .card-text strong {
            /*width: 150px;*/
            display: inline-block;
        }

        .card-text span {
            display: inline-block;
        }

        @keyframes blink-effect {
            50% {
                opacity: 0;
            }
        }
        .blinking{
            -webkit-animation: blink 0.5s;
            -moz-animation: blink 0.5s;
            animation: blink 0.5s;
        }
        @-webkit-keyframes blink{
            0% {opacity: 0;}
            100% {opacity: 1;}
        }

        @-moz-keyframes blink{
            0% {opacity: 0;}
            100% {opacity: 1;}
        }

        @keyframes blink{
            0% {opacity: 0;}
            100% {opacity: 1;}
        }
    </style>
</head>

<body>
<div class="container">
    <div class="py-3">
        <h1 class="h2">실시간 데이터</h1>
    </div>

    <div class="row">
        <% id_list.forEach((el, index) => { %>
            <div class="col-xxl-3 col-lg-4 col-sm-12">
                <div class="card" id="card_<%= el %>">
                    <div class="card-header">
                        <p class="card-title d-flex justify-content-between">
                        <a>
                            <strong>ID:</strong> <span id="id_<%= el %>">_</span>
                        </a>
                        <a>
                            <strong>BATT:</strong> <span id="batt_<%= el %>">_</span>
                        </a>
                        </p>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <p class="card-text"><strong>AQI:</strong> <span id="aqi_<%= el %>">_</span></p>
                                <p class="card-text"><strong>PM1.0:</strong> <span id="pm1.0_<%= el %>">_</span></p>
                                <p class="card-text"><strong>PM2.5:</strong> <span id="pm2.5_<%= el %>">_</span></p>
                                <p class="card-text"><strong>PM10:</strong> <span id="pm10_<%= el %>">_</span></p>
                                <p></p>
                            </div>
                            <div class="col-md-6">
                                <p class="card-text"><strong>TVOC:</strong> <span id="tvoc_<%= el %>">_</span></p>
                                <p class="card-text"><strong>EC2:</strong> <span id="ec2_<%= el %>">_</span></p>
                                <p class="card-text"><strong>IRUN:</strong> <span id="irun_<%= el %>">_</span></p>
                                <p class="card-text"><strong>TEMP:</strong> <span id="temp_<%= el %>">_</span></p>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <p class="card-text"><strong>LAST_UPDATE:</strong> <span id="last_update_<%= el %>">_</span></p>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
</div>

<script src="/javascripts/realtimetable.js"></script>
</body>

</html>
